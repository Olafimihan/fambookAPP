<?xml version='1.0' encoding='utf-8'?>
<widget id="io.delaf.poultry" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>poultry.io</name>
    <description>
        A Mobile APP for poultry data collections into a cloud server for reporting purpose with offline capabilities
    </description>
    <author email="delafsolutions@gmail.com" href="http://cordova.io">
        delaf systems
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
